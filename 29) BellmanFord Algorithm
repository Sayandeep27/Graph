 
    vector<int> bellman_ford(int n, vector<vector<int>>& edges, int s) {
         
         vector<int>dist(n,1e8);
         
         dist[s]=0;
         
         // n-1 times relaxation
         
         for(int i=0;i<n-1;i++)
         {
             for(auto it:edges)
             {
                 int u=it[0];
                 int v=it[1];
                 int wt=it[2];
                 
                 if(dist[u]+wt<dist[v])
                 {
                     dist[v]=wt+dist[u];
                 }
             }
         }
         
         
         // last relaxation
         
         for(auto it:edges)
         {
             int u=it[0];
             int v=it[1];
             int wt=it[2];
             
             if(dist[u]+wt<dist[v])
             {
                 return {-1};
             }
         }
         
         
         return dist;
    }
